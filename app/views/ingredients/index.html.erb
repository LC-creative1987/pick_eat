<div class="container my-3">
  <div class="row">
    <% @ingredients.each do |ingredient| %>
      <div class="col-12 col-md-6 col-sm-12 col-lg-3 my-2">
        <div class="card rounded h-100 d-flex d-column">
          <div class="d-flex justify-content-between p-3">
            <div id="<%= ingredient.id %>" >
              <p class="text-bold">Ingredient name: <%= ingredient.name %></p>
              <p class="text-bold">Unit: <%= ingredient.unit %></p>
              <p class="text-bold">Increment: <%= ingredient.change_increment %></p>
              <p class="text-bold">Cost: <%= ingredient.cost %></p>
              <p class="text-bold">Price: <%= ingredient.price %></p>
              <p class="text-bold">Stock: <%= ingredient.stock_quantity %></p>
            </div>

          </div>
          <div class="card-footer text-muted mt-auto">
            <%= link_to 'Edit', edit_restaurant_ingredient_path(@restaurant, ingredient), class: "btn btn-outline-primary" %>
            <%= link_to 'Delete', restaurant_ingredient_path(@restaurant, ingredient), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
    <%= link_to "Back to the restaurant", restaurant_ingredients_path(@restaurant), class: "btn btn-primary" %>
  </div>
</div>

