
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new ingredient</h1>
      <%= simple_form_for @ingredient do |f| %>
          <%= f.input :name %>
          <%= f.input :unit %>
          <%= f.input :change_increment %>
          <%= f.input :cost %>
          <%= f.input :price %>
          <%= f.submit class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>

