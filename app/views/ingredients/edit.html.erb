<section>

<div class="container">
  <div class="special-row justify-content-center">
    <div class="h-100 col-xs-12 col-sm-10 col-sm-offset-1 mt-3">
      <h1>Update ingredient</h1>
      <%= simple_form_for  [@restaurant, @ingredient]  do |f| %>
          <%= f.input :name %>
          <%= f.input :unit %>
          <%= f.input :change_increment %>
          <%= f.input :cost %>
          <%= f.input :price %>
          <%= f.input :stock_quantity %>

          <%= f.submit class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
  <%= link_to "Back to all ingredients", restaurant_ingredients_path(@restaurant), class: "btn btn-primary" %>
</div>

</section>


