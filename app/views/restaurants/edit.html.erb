<section>

  <div class="container my-3">
    <div class="special-row justify-content-center">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 mt-3">
        <h1>Update restaurant details</h1>
        <%= simple_form_for @restaurant do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :cuisine, collection: Restaurant::CUISINES %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  <%= link_to "Back to #{@restaurant.name} Restaurant", restaurant_path(@restaurant), class: "btn purple-button mb-3" %>
  </div>
</section>

