<section>

  <div id="special-margin" class="container">
    <div class="special-row justify-content-center">
      <div class="col-12 col-sm-4">
        <h2>Create a new restaurant</h2>
        <%= simple_form_for @restaurant do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :cuisine, collection: Restaurant::CUISINES %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>

</section>





