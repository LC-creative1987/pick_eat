<section>

  <div class="container">
    <div class="special-row justify-content-center">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 mt-3">
        <h1>Create a new dish</h1>
        <%= simple_form_for [@restaurant, @dish]  do |f| %>
          <%= f.input :name %>
          <%= f.input :base_price %>
          <%= f.submit class: 'btn btn-primary'%>
        <% end %>
      </div>
    </div>
  </div>

</section>

