<div class="main-container d-flex">

  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-12 col-md-6 col-sm-12 col-lg-4">
        <div class="card mb-3 rounded">
          <% if restaurant.photo.attached? %>
            <div class="card-image" style="background-image: url('<%= cl_image_path restaurant.photo.key, height: 300, crop: :fill %>')"></div>
          <% else %>
            <div class="card-image" style="background-image: url('https://images.unsplash.com/photo-1582920980795-2f97b0834c58?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80')" class="rounded"></div>
          <% end %>

          <div class="d-flex justify-content-between p-3">
            <div>
              <%= link_to restaurant_path(restaurant) do %>
                <p class="text-bold"><%= restaurant.name %></p>
              <% end %>
              <p class="mb-0 fs-12"><%= restaurant.cuisine %></p>
            </div>

            <div class="d-flex flex-column justify-content-end align-items-end">
              <span class="rating-stars text-yellow">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star-half-alt"></i>
              </span>
              <p class="restaurant-distance mb-0 text-muted fs-12"><i class="fas fa-map-marker-alt mr-1"></i>500km</p>
            </div>
            <div class="d-flex justify-content-end align-items-center">
              <%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-outline-primary mr-3" %>
              <%= link_to 'Delete', restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
  <div id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<div>
<%= link_to "Add Restaurant", new_restaurant_path, class: "btn btn-outline-primary" %>


</div>
</div>



