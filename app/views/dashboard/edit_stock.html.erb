<section>

<%= form_tag update_stock_path :method => :post do %>
  <%= hidden_field_tag 'page', (params[:page].nil? ? 1 : params[:page]) %>
  <table class='table table-striped table-condensed'>
    <thead>
      <tr>
        <th>Restaurant</th>
        <th>Ingredient Name</th>
        <th>Unit of Measure</th>
        <th>Change Increment</th>
        <th>Cost</th>
        <th>Price</th>
        <th>Stock Quantity</th>

      </tr>
    </thead>
    <tbody>
      <% @restaurants.each do |restaurant| %>


        <% restaurant.ingredients.each do |ingredient| %>
          <%= fields_for "ingredients[]", ingredient do |f| %>
            <tr>
              <td>
                <%= restaurant.name %>

              <td>
                <%= f.text_field :name %>
              </td>
              <td>
                <%= f.text_field :unit %>
              </td>
                <td>
                <%= f.text_field :change_increment %>
              </td>

              <td>
                <%= f.text_field :cost %>
              </td>
                <td>
                <%= f.text_field :price %>
              </td>
              <td>
                <%= f.text_field :stock_quantity %>
              </td>

            </tr>
          <% end %>
        <% end %>
        <% end %>
    </tbody>
  </table>
  <p><%= submit_tag "Update Ingredients", :class => 'btn btn-success' %></p>
<% end %>

</section>


